{
    "branches": [
        "om-file-format-rust-bindings"
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "build",
                        "scope": "deps",
                        "release": "patch"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "Features"
                        },
                        {
                            "type": "fix",
                            "section": "Bug Fixes"
                        },
                        {
                            "type": "build",
                            "section": "Dependencies and Other Build Updates",
                            "hidden": false
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release-cargo/semantic-release-cargo",
            {
                "verifyConditionsCmd": "verify-conditions",
                "prepareCmd": "prepare ${nextRelease.version}",
                "publishCmd": "publish"
            }
        ],
    ]
}
